<% include partials/header %>
<% include partials/nav %>


    <style>
      @import url('https://fonts.googleapis.com/css?family=Raleway&display=swap');
      form {
        width: 50%;
        margin-left: auto;
        margin-right: auto;
        font-family: 'Raleway', sans-serif;
      }
      
      h3 {
        text-align: center;
        color: #636B6F;
        font-size: 44px;
        line-height: 90px;
      }
      
      .form-control {
        width: 100%;
        background-color: #ECECEC;
        color: black;
        padding-left: 20px;
        height: 40px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        line-height: 19px;
        margin-bottom: 24px;
      }
      
      #password2 {
        margin-bottom: 0px;
      }
      
      em p {
        color: #3087D1;
        margin-top: 0px;
        font-size: 16px;
        line-height: 19px;
        text-align: right;
      }
          
      .btn-custom {
        line-height: 20px;
        height: 40px;
        background: #3087D1;
        border-radius: 6px;
      }
      
      .btn-custom:hover {
        line-height: 20px;
        background: rgb(44, 120, 187);
      }
      
      .register {
        text-align: center;
      }
      
      .register p a {
        color: #3087D1;
        font-size: 16px;
        line-height: 19px;
      }
      
      @media (max-width: 767px) {
        h3 {
          font-size: 35px;
        }
        form {
          width: 85%;
        }
        em p {
          font-size: 14px;
        }
      }
    </style>
    <div id="cover">
      <div class="loader"></div>
    </div>
    <div class="register-container">
      <div id="register-flex">
        <div class="register-form-container register-item" id="register-form">
          <h3>Register</h3>
          <form class="register-form" name="signup" action="javascript:void(0);" method="POST">
            <div class="form-group">
              <input type="text" placeholder="Name" name="name" class="form-control">
            </div>
            <div class="form-group">
              <input type="email" placeholder="Email Address" name="email" class="form-control" required />
            </div>
            <div class="form-group">
              <input type="username" placeholder="Username" name="username" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" name="password" class="form-control" id="password1" required>
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password Confirmation" class="form-control" name="password2" id="password2">
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block btn-custom" id="signup-btn">Register</button>
            </div>
            <div class="register">
              <p><a href="/login">Login</a></p>
            </div>
          </form>
        </div>
      </div>

    </div>
    </div>
    <script>
			const pass1 = document.querySelector("#password1");
			const pass2 = document.querySelector("#password2");


function validate(){
  if(pass1.value !== pass2.value) {
    pass2.setCustomValidity("Passwords Don't Match");
  } else {
    pass2.setCustomValidity('');
      }
}

pass1.onchange = validate;
pass2.onkeyup = validate;
</script>
