<% include partials/header %>
<% include partials/nav %>


    <style>
      @import url('https://fonts.googleapis.com/css?family=Raleway&display=swap');
      form {
        width: 50%;
        margin-left: auto;
        margin-right: auto;
        font-family: 'Raleway', sans-serif;
      }
      
      h3 {
        text-align: center;
        color: #636B6F;
        font-size: 44px;
        line-height: 90px;
      }
      
      .form-control {
        width: 100%;
        background-color: #ECECEC;
        color: black;
        padding-left: 20px;
        height: 40px;
        border: none;
        border-radius: 5px;
        font-size: 16px;
        line-height: 19px;
        margin-bottom: 24px;
      }
      
      #password2 {
        margin-bottom: 0px;
      }
      
      em p {
        color: #3087D1;
        margin-top: 0px;
        font-size: 16px;
        line-height: 19px;
        text-align: right;
      }
          
      .btn-custom {
        width: 206px;
        line-height: 20px;
        height: 40px;
        background: #3087D1;
        border-radius: 6px;
      }
      
      .btn-custom:hover {
        line-height: 20px;
        background: rgb(44, 120, 187);
      }

      .button-special {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
      }
      
      .register {
        text-align: center;
      }
      
      .register p a {
        color: #3087D1;
        font-size: 16px;
        line-height: 19px;
      }
      #error{
        display: none;
      }
      @media (max-width: 1067px) {
        h3 {
          font-size: 35px;
        }
        form {
          width: 85%;
        }
        em p {
          font-size: 14px;
        }
      }
    </style>
    <div id="cover">
      <div class="loader"></div>
    </div>
    <div class="register-container">
      <div id="register-flex">
        <div class="register-form-container register-item" id="register-form">
          <h3>Register</h3>
          <form class="register-form" name="signup" action="javascript:void(0);" method="POST">
            <div class="form-group">
              <input type="text" placeholder="Name" name="name" class="form-control">
            </div>
            <div class="form-group">
              <input type="email" placeholder="Email Address" name="email" class="form-control" required />
            </div>
            <div class="form-group">
              <input type="username" placeholder="Username" name="username" class="form-control" required>
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" name="password" class="form-control" id="password1" required>
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password Confirmation" class="form-control" name="password2" id="password2">
            </div>
            <div class="text-center"><p>By submitting this form, you agree to our <a href="/terms">Privacy Policy</a></p></div>
            <div class="form-group button-special">
              <button class="btn btn-success btn-block btn-custom" id="signup-btn">Register</button>
            </div><span id="error">Passwords do not match</span>
            <div class="register">
              <p><a href="/login">Login</a></p>
            </div>
            <div class="text-center">
              <p>OR</p>
              <a href="/auth/twitter" class="btn btn-info social"><span class="fa fa-twitter"></span> Continue with Twitter</a
                >
              
                <a href="/auth/google" class="btn btn-danger social"
                  ><span class="fa fa-google"></span> Continue with Google</a
                >
              
                <a href="/auth/facebook" class="btn btn-primary social"
                  ><span class="fa fa-facebook"></span> Continue with Facebook</a
                >
            </div>
          </form>
        </div>
      </div>

    </div>
    </div>
    
    <% include partials/footer %>
