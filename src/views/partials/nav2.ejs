<div class="content-body">
  <!-- This div is closed in the footer.ejs file -->

  <div class="notification">
    Simple Notification
  </div>
  <script>

    //Clicking notification icon will toggle display
    function notificationToggle(){
      document.getElementById("branded").classList.toggle("show");
    }
    //Menu does not close when clicked inside
    document.getElementById("branded").addEventListener('click', function(event){
      event.stopPropagation();
    });
    // Close menu on click outside
    window.onclick = function(event){
      if(!event.target.matches('#bell-icon')){
        var dropdowns = document.getElementsByClassName("notification-menu");
      }
      var i;
      for(i=0; i< dropdowns.length; i++){
        var openDropdown = dropdowns[i];
        if(openDropdown.classList.contains('show')){
          openDropdown.classList.remove('show');
        }
      }
    }


    const links = document.getElementsByClassName('notification-wrapper');

    function changeColor(e) {
      e.target.style.backgroundColor = e.target.style.backgroundColor ? null : 'white';
    }
    for (var i = 0; i < links.length; i++) {
      links[i].addEventListener('click', changeColor);
    }
  </script>
