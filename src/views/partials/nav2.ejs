        position: relative;
    }

    .badge {
        position: absolute;
        border-radius: 50px;
        bottom: 23px;
        left: 20px
    }

    .notification-menu {
        overflow-y: auto;
        overflow-x: hidden;
        max-height: 300px;
        width: 300px;
        border-top: 2px solid #73A9D9;
        border-bottom: 2px solid #73A9D9;
        z-index: 2000;
        padding: 10px 20px;
        font-size: 15px;
        background-color: #fff;
        position: absolute;
        top: 3rem;
        transition: 2s ease-in-out;
    }

    .hide {
        display: none;
    }

    .show {
        display: block;
    }

    .notification-title {
        margin-bottom: 0;
    }

    .notification-title a {
        /* font-size: 15px; */
        font-weight: bold;
        color: #24659e;
        text-decoration: none;
    }

    .notification-link:hover {
        text-decoration: none;
    }

    .notification-link:hover .notification-wrapper {
        background: #e7f0f8;
    }

    .notification-wrapper {
        padding: 1rem 0.5rem;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .notification-image {
        margin-right: 0.5rem;
    }

    .notification-no-image {
        display: flex;
        width: 40px;
        height: 40px;
        margin-right: 0.5rem;
        justify-content: center;
        align-items: center;
        background: var(--primary);
        color: #fff;
    }

    .badge {
        background-color: #f44336;
        color: #fff;
    }
    .toggle-badge {
        display: none;
    }


    /* Snackbar */

    #snackbar {
        display: none;
        min-width: 250px;
        margin-left: -125px;
        background-color: #333;
        color: #fff;
        text-align: center;
        border-radius: 2px;
        padding: 16px;
        position: fixed;
        z-index: 1;
        left: 50%;
        bottom: 30px;
    }

    #snackbar.show {
        display: block;
        -webkit-animation: fadein 0.5s, fadeout 0.5s 2.5s;
        animation: fadein 0.5s, fadeout 0.5s 3s;
    }

    .verify-info {
      background: #eba2a2;
      padding: 3px;
      text-align: center;
    }

    /* Animations to fade the snackbar in and out */

    @-webkit-keyframes fadein {
        from {
            bottom: 0;
            opacity: 0;
        }

        to {
            bottom: 30px;
            opacity: 1;
        }
    }

    @keyframes fadein {
        from {
            bottom: 0;
            opacity: 0;
        }

        to {
            bottom: 30px;
            opacity: 1;
        }
    }

    @-webkit-keyframes fadeout {
        from {
            bottom: 30px;
            opacity: 1;
        }

        to {
            bottom: 0;
            opacity: 0;
        }
    }

    @keyframes fadeout {
        from {
            bottom: 30px;
            opacity: 1;
        }

        to {
            bottom: 0;
            opacity: 0;
        }
    }

    @media screen and (max-width: 990px) {
        .badge {
            left: 10px;
        }
    }

    @media screen and (min-width: 992px) and (max-width: 1012px) {
