<style>
  .overall {
    max-width: 100%;
  }

  .container {
    width: 100%;
    padding: 0;
    margin: 0;
  }

  .navigate {
    box-shadow: 0 0 4px rgba(0, 0, 0, 0.4);
  }

  .navigate h4 {
    padding-left: 40px;
    font-family: 'Raleway', sans-serif;
    color: grey;
  }

  .end-nav div {
    margin-left: 30%;
  }

  .end-nav span {
    margin-left: 20px;
  }

  .end-nav input {
    width: 50%;
    border: 1px solid c4c4c4;
    border-radius: 5px;
    padding-left: 40px;
    box-sizing: border-box;
    background: url('https://res.cloudinary.com/kayode/image/upload/v1570641135/icons/search_ah4hi2.svg') no-repeat left top;
  }

  .end-nav input:focus {
    background: 0;
    padding-left: 3px;
  }

  .end-nav span {
    padding-right: 10px;
  }

  .first-section {
    padding: 50px;
  }

  .first-section img {
    width: 102px;
    height: 102px;
    border-radius: 50px;
    border: 0;
  }

  .first-section button {
    padding: 10px 20px 10px 20px;
    border: 1px solid blue;
    border-radius: 5px;
    background: white;
    color: blue;
    margin-left: 70%;
    margin-top: 40px;
  }

  .post {
    width: 70%;
    margin: auto;
    padding: 10px;
  }

  .post h3 {
    padding-left: 50px;
    font-family: 'Raleway', sans-serif;
    ;
  }

  .post ul li {
    list-style-type: none;
    border: 1px solid #c4c4c4;
    padding: 20px;
    margin: 15px;
    width: 600px;
  }

  .location {
    font-size: 10px;
    font-weight: bold;
  }

  .isReal {
    border-radius: 25px;
    padding-left: 20px;
    padding-right: 20px;
  }

  .username {
    padding-top: 5px;
  }

  .user {
    position: relative;
    left: 10px;
  }

  .end-nav-bar input {
    margin-right: 50px;
  }

  .end-nav-bar img {
    margin-right: 20px;
  }

  .end-nav-bar .initial {
    margin-right: 20px;
  }

  .end-nav-bar button {
    margin-right: 10px;
  }
</style>


<div id="cover">
  <div class="loader"></div>
</div>

