<% include partials/header %> <% include partials/nav %>
<div id="cover">
  <div class="loader"></div>
</div>
<div class="notification">
  Simple Notification
</div>

<body>
  <div class="header">
    <div class="container">
      <form action="/invites/search" method="GET">
        <div class="form-row">
          <div class="col-md-8">
            <input type="text" name="q" class="form-control" placeholder="Search a keyword or a sentence" />
          </div>

          <div class="col-md-4">
            <input type="submit" value="Invite Search" class=" btn btn-primary" />
          </div>
        </div>
      </form>
    </div>

    <!-- Small small -->
    <% if (invites.length > 0) { %>

    <div class="container">
      <p class="text-muted" style="font-size: smaller;">
        Found <span class="badge badge-info"><%= invites.length %></span> <%=
        invites.length > 1 ? 'posts' : 'post' %>
      </p>
    </div>

    <% } %>

    <section class="job-invites">
      <% if (invites.length === 0) { %>

      <!-- No invites -->
      <div class="card card-secondary text-center container my-4">
        No invites found :(
        <p>Create a new invite <a href="/">here</a></p>
      </div>

      <% } %> <% if (invites.length > 0) { %> <% for (invite of invites) { %>
      <div class="container post-meta" id="<%=invite.inviteId%>">
        <h4>
          <a href="<%='/post/'+invite.inviteId%>">
            <%=invite.title%>
          </a>
        </h4>
        <p>
          <%=invite.body%>
        </p>

        <span class="float-right share-buttons">
          <!-- <a href="#"><i class="fab fa-facebook-f"></i></i></a> -->
          <a target="_blank"
             href="https://twitter.com/intent/tweet?text=<%=invite.title+' - Is this a real job? \n Let us know: http://isthisarealjob.ng/post/'+invite.inviteId%>"><i
               class="fab fa-twitter"></i></a>
          <!-- <a href="https://www.instagram.com/"><i class="fab fa-instagram"></i></a> -->
          <a target="_blank"
             href="https://api.whatsapp.com/send?&text=<%=invite.title+' - Is this a real job? \n Let us know: http://isthisarealjob.ng/post/'+invite.inviteId%>"><i
               class="fab fa-whatsapp"></i></a>
        </span>
      </div>
      <% } %> <% } %>
    </section>
  </div>
</body>

<% include partials/footer %>