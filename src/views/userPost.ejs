<% include partials/header %>
<% include partials/nav2 %>

<link rel="stylesheet" href="/css/userPost.css" />

<style>
.newPosts{
  color: #24659e;
  background-color: white;
}
</style>

<div id="cover">
  <div class="loader"></div>
</div>

<div class="mt-5 section">
  <div class="container">
    <div class=" post-form col-md-10">
      <h4>New Post</h4>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group">
            <input type="text" class="form-control" name="company" id="companyName" placeholder="Company Name">
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <input type="text" class="form-control" name="location" id="jobLocation" placeholder="Job Location">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <input type="text" class="form-control" name="title" id="jobTitle" placeholder="Title">
          </div>
        </div>
        <!--No more file upload-->
        <!--div class="col-md-6">
          <div class="form-group">
            <input type="file" class="form-control" name="media" id="media" placeholder="Media">
          </div>
        </div-->
      </div>
      <div class="form-group">
        <textarea class="form-control" id="jobDetails" name="jobDetails" rows="5" placeholder="Paste the invitation you were sent... Include links - if any - to the job ad or other online resources by which you found this job opening."></textarea>
      </div>
      <div class="text-left">
        <button type="submit" type="button" id="newInviteBtn" class="btn btn-primary btn-custom">Post</button>
        <a href="/posts" type="reset" class="btn btn-danger btn-custom">Cancel</a>
      </div>
    </div>
  </div>
</div>

<div class="success-dialog is-hidden">
  <i class="fas fa-check-circle success-dialog__icon"></i>
  <span class=" success-dialog__message">Your Invite has been posted.</span>
  <a href="/posts" class="btn btn-primary success-dialog__action">View Posts</a>
</div>

<% include partials/footer %>
